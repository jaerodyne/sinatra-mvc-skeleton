<div class="row" id="abyss"> 
	<div class="col s5 offset-s4">
		<h1> Welcome to the abyss. </h1>
	</div>
</div>
	
<%= erb :"_errors" %>
<div class="row" >
	<div class="col s3 offset-s4" id="login">
		<div class="card grey darken-4">
			<div class="card-content white-text">
				<%= erb :"_errors" %>
				<span class="card-title">Sign in here, unfortunate one:</span>
				<form method='post' action='/login'>
					<input type='text' name='user[email]' placeholder="Email"><br>
					<input type='password' name='user[password]' placeholder="Password"><br>
					<button class="btn waves-effect blue" type="submit" name="action">Login
						<i class="material-icons right">send</i>
					</button>
				</form>
			</div>
			<div class="card-action white-text">
				<p>Not a cynic yet? <a href='/users/new'> Sign up and join us. </a></p>
			</div>
		</div>
	</div>
</div>