<div id="login"> 
	<h1> Welcome to the abyss. </h1>
	Sign in here, unfortunate one:
	<br>

	<% if @errors %>
	  <% @errors.each do |error| %>
	    <p><%= error %></p>
	  <% end %>
	<% end %>

	<form method='post' action='/login'>
	  <input type='text' name='user[email]' placeholder="Email"><br>
	  <input type='password' name='user[password]' placeholder="Password"><br>
	  <input type='submit' value='Log In'>
	</form>

	<p>Not a cynic yet? <a href='/users/new'> Sign up and join the misery. </a></p>

</div>
